generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTH.JS MODELS
// ============================================

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String?
  role           UserRole  @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  products       Product[]       @relation("CreatedProducts")
  contributions  Contribution[]  @relation("UserContributions")
  reviews        Contribution[]  @relation("ReviewedContributions")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// APP MODELS
// ============================================

model Product {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  barcode          String            @unique
  name             String
  brand            String?
  imageUrl         String?
  
  // Cached Open Food Facts data
  offData          Json?
  
  // Calculated scores
  score            Int               @default(0) // 0-100
  scoreLetter      ScoreLetter       @default(C)
  scoreColor       String            @default("#f97316") // Orange
  
  // Analysis
  positives        Json[]            // Array of { text: string, icon?: string }
  negatives        Json[]            // Array of { text: string, icon?: string }
  allergens        String[]
  allergensSeverity AllergenSeverity @default(LOW)
  
  // Nutrition (per 100g)
  energy           Float?            // kJ or kcal
  fat              Float?
  saturatedFat     Float?
  carbohydrates    Float?
  sugars           Float?
  fiber            Float?
  proteins         Float?
  salt             Float?
  
  // Status
  status           ProductStatus     @default(DRAFT)
  createdById      String?           @db.ObjectId
  createdBy        User?             @relation("CreatedProducts", fields: [createdById], references: [id])
  approvedAt       DateTime?
  
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  
  contributions    Contribution[]
}

model Contribution {
  id           String             @id @default(auto()) @map("_id") @db.ObjectId
  
  productId    String             @db.ObjectId
  product      Product            @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  userId       String             @db.ObjectId
  user         User               @relation("UserContributions", fields: [userId], references: [id])
  
  // Proposed changes as JSON
  changes      Json
  reason       String?            // User's explanation for the edit
  
  status       ContributionStatus @default(PENDING)
  
  reviewedById String?            @db.ObjectId
  reviewedBy   User?              @relation("ReviewedContributions", fields: [reviewedById], references: [id])
  reviewNote   String?
  reviewedAt   DateTime?
  
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum ProductStatus {
  DRAFT
  APPROVED
  REJECTED
}

enum ContributionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ScoreLetter {
  A
  B
  C
  D
  E
}

enum AllergenSeverity {
  LOW
  MEDIUM
  HIGH
}
